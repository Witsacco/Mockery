<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>messagePostedServiceImpl</servlet-name>
		<servlet-class>com.witsacco.mockery.server.MessagePostedServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>messagePostedServiceImpl</servlet-name>
		<url-pattern>/mockery/postMessage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getNewMessagesServiceImpl</servlet-name>
		<servlet-class>com.witsacco.mockery.server.GetNewMessagesServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>getNewMessagesServiceImpl</servlet-name>
		<url-pattern>/mockery/getNewMessages</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>messageScoreServiceImpl</servlet-name>
		<servlet-class>com.witsacco.mockery.server.MessageScoreServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>messageScoreServiceImpl</servlet-name>
		<url-pattern>/mockery/scoreMessage</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginService</servlet-name>
		<servlet-class>com.witsacco.mockery.server.LoginServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>loginService</servlet-name>
		<url-pattern>/mockery/login</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Mockery.html</welcome-file>
	</welcome-file-list>

</web-app>